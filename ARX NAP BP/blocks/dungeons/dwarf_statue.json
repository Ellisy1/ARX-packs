{
	"format_version": "1.19.40",
	"minecraft:block": {
		"description": {
			"identifier": "arx:dwarf_statue",
			"menu_category": {
				"category": "nature"
			}
		},
		"components": {
			"minecraft:on_interact": {
				"event": "interact",
				"target": "self"
			},
			"minecraft:light_emission": 15,
			"minecraft:geometry": "geometry.empty",
			"minecraft:material_instances": {
				"*": {
					"texture": "arx_invisible",
					"render_method": "alpha_test"
				}
			}
		},
		"events": {
			"interact": {
				"run_command": {
					"command": [
						"tag @p add self",
						"title @p[tag=self, scores={restrict_block_interact=0}] title §dВы уменьшаетесь!",
						"playanimation @e[type=arx:dwarf_statue] animation.dwarf_statue.activate",
						"event entity @p[tag=self, scores={restrict_block_interact=0}] arx:scale_curse_add",
						"camera @p[tag=self, scores={restrict_block_interact=0}] set minecraft:free ease 2 in_out_circ pos ~-1 ~2 ~1 facing @p",
						"scoreboard players set @p[tag=self, scores={restrict_block_interact=0}] dwarf_cam_cd 5",
						"scoreboard players set @p[tag=self, scores={restrict_block_interact=0}] dwarf_curse 1",
						"playsound elemental_use @a ~ ~ ~",
						"camera @p[tag=self, scores={restrict_block_interact=0}] fade time 0 0 1 color 200 10 200",
						"scoreboard players set @p[tag=self, scores={restrict_block_interact=0}] restrict_block_interact 60",
						"tag @p remove self"
					]
				}
			}
		}
	}
}