{
	"format_version": "1.16.0",
	"minecraft:entity": {
		"description": {
			"identifier": "arx:elemental_desert",
			"is_spawnable": true,
			"is_summonable": true
		},
		"components": {
			"minecraft:despawn": {
				"despawn_from_distance": {}
			},
			"minecraft:loot": {
				"table": "loot_tables/entities/elemental_desert.json"
			},
			"minecraft:experience_reward": {
				"on_death": "query.last_hit_by_player ? 200 : 0"
			},
			//ОСНОВА
			"minecraft:is_hidden_when_invisible": {},
			"minecraft:type_family": {
				"family": [
					"mob",
					"dangerous"
				]
			},
			"minecraft:breathable": {
				"total_supply": 15,
				"suffocate_time": 0
			},
			"minecraft:collision_box": {
				"width": 0.7,
				"height": 0.7
			},
			"minecraft:nameable": {},
			"minecraft:health": {
				"value": 10
			},
			"minecraft:hurt_on_condition": {
				"damage_conditions": [
					{
						"filters": {
							"test": "in_lava",
							"subject": "self",
							"operator": "==",
							"value": true
						},
						"cause": "lava",
						"damage_per_tick": 4
					}
				]
			},
			//ПЕРЕДВИЖЕНИЕ
			"minecraft:navigation.float": {
				"can_path_over_water": true
			},
			"minecraft:movement.basic": {},
			"minecraft:jump.static": {},
			"minecraft:can_climb": {},
			"minecraft:movement": {
				"value": 0.01
			},
			"minecraft:behavior.float_wander": {
				"priority": 4,
				"must_reach": true
			},
			"minecraft:balloonable": {},
			"minecraft:physics": {},
			"minecraft:pushable": {
				"is_pushable": true,
				"is_pushable_by_piston": true
			},
			"minecraft:conditional_bandwidth_optimization": {},
			//БОЙ
			"minecraft:behavior.ranged_attack": {
				"priority": 1,
				"attack_radius": 64,
				"charge_shoot_trigger": 2,
				"charge_charged_trigger": 1
			},
			"minecraft:shooter": {
				"def": "minecraft:fireball"
			},
			"minecraft:follow_range": {
				"value": 64,
				"max": 64
			},
			
			"minecraft:behavior.melee_attack": {
				"priority": 2
			},
			"minecraft:attack": {
				"damage": 2
			},
			"minecraft:can_fly": {},
			"minecraft:behavior.nearest_attackable_target": {
				"priority": 2,
				"must_see": true,
				"reselect_targets": true,
				"within_radius": 15.0,
				"must_see_forget_duration": 25.0,
				"entity_types": [
					{
						"filters": {
							"any_of": [
								{
									"test": "is_family",
									"subject": "other",
									"value": "helpless"
								},
								{
									"all_of": [
										{
											"test": "is_family",
											"subject": "other",
											"value": "player"
										},
										{
											"test": "is_family",
											"subject": "other",
											"operator": "not",
											"value": "is_knocked"
										}
									]
								}
							]
						},
						"max_dist": 28
					}
				]
			},
			"minecraft:on_death": {
				"event": "on_death",
				"target": "self"
			}
		},
		"events": {
			"on_death": {
				"run_command": {
					"command": [
						"scoreboard players add @a[r=10] xp_tray 200",
						"scoreboard players add @a[r=10] count_mob_kills 1"
					]
				}
			}
		}
	}
}