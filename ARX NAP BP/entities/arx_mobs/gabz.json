{
	"format_version": "1.16.0",
	"minecraft:entity": {
		"description": {
			"identifier": "arx:gabz",
			"is_spawnable": true,
			"is_summonable": true
		},
		"components": {
			"minecraft:knockback_resistance": {
				"value": 0.7
			},
			"minecraft:despawn": {
				"despawn_from_distance": {}
			},
			"minecraft:experience_reward": {
				"on_death": "query.last_hit_by_player ? 80 : 0"
			},
			"minecraft:behavior.float": {
				"priority": 2
			},
			"minecraft:loot": {
				"table": "loot_tables/entities/gabz.json"
			},
			"minecraft:is_hidden_when_invisible": {},
			"minecraft:type_family": {
				"family": [
					"mob",
					"boat_destroyer"
				]
			},
			"minecraft:navigation.walk": {
				"can_path_over_water": false,
				"avoid_water": true,
				"avoid_damage_blocks": true,
				"avoid_portals": true
			},
			"minecraft:movement.basic": {},
			"minecraft:jump.static": {},
			"minecraft:can_climb": {},
			"minecraft:collision_box": {
				"width": 1.8,
				"height": 2.5
			},
			"minecraft:nameable": {},
			"minecraft:health": {
				"value": 130
			},
			"minecraft:hurt_on_condition": {
				"damage_conditions": [
					{
						"filters": {
							"test": "in_lava",
							"subject": "self",
							"operator": "==",
							"value": true
						},
						"cause": "lava",
						"damage_per_tick": 100
					}
				]
			},
			"minecraft:movement": {
				"value": 0.23
			},
			"minecraft:behavior.random_stroll": {
				"priority": 6,
				"speed_multiplier": 0.8
			},
			"minecraft:balloonable": {},
			"minecraft:physics": {},
			"minecraft:pushable": {
				"is_pushable": true,
				"is_pushable_by_piston": true
			},
			"minecraft:conditional_bandwidth_optimization": {},
			"minecraft:on_hurt_by_player": {
				"event": "become_agressive"
			},
			"minecraft:on_death": {
				"event": "on_death",
				"target": "self"
			},
			"minecraft:break_blocks": {
				"breakable_blocks": [
					"bamboo",
					"bamboo_sapling",
					"beetroot",
					"carrots",
					"melon_stem",
					"potatoes",
					"pumpkin_stem",
					"reeds",
					"sapling",
					"wheat"
				]
			},
			"minecraft:group_size": {
				"radius": 16
			}
		},
		"component_groups": {
			"arx:agressive": {
				"minecraft:timer": {
					"looping": true,
					"time": 100,
					"time_down_event": {
						"event": "become_calm"
					}
				},
				"minecraft:behavior.nearest_attackable_target": {
					"priority": 2,
					"must_see": true,
					"reselect_targets": true,
					"within_radius": 25.0,
					"must_see_forget_duration": 25.0,
					"entity_types": [
						{
							"filters": {
								"all_of": [
									{
										"test": "is_family",
										"subject": "other",
										"value": "player"
									},
									{
										"test": "is_family",
										"subject": "other",
										"operator": "not",
										"value": "is_knocked"
									}
								]
							},
							"max_dist": 10
						}
					]
				},
				"minecraft:behavior.melee_attack": {
					"priority": 1,
					"speed_multiplier": 1.4
				},
				"minecraft:attack": {
					"damage": 6
				}
			}
		},
		"events": {
			"become_agressive": {
				"add": {
					"component_groups": "arx:agressive"
				},
				"run_command":{
					"command":[
						"event entity @e[type=arx:gabz, r=15, rm=0.01] povoke_by_hurting_friend"
					]
				}
			},
			"povoke_by_hurting_friend": {
				"add": {
					"component_groups": "arx:agressive"
				}
			},
			"become_calm": {
				"remove": {
					"component_groups": "arx:agressive"
				}
			},
			"on_death": {
				"run_command": {
					"command": [
						"scoreboard players add @a[r=10] xp_tray 80",
						"scoreboard players add @a[r=10] count_mob_kills 1"
					]
				}
			}
		}
	}
}