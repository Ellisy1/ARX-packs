{
	"format_version": "1.16.0",
	"minecraft:entity": {
		"description": {
			"identifier": "arx:march",
			"is_spawnable": true,
			"is_summonable": true,
			"properties": {
				"arx:phase": {
					"type": "int",
					"range": [
						0,
						3
					], // 0 - начало, 3 - финал
					"default": 0,
					"client_sync": true
				},
				"arx:descent": {
					"type": "bool",
					"client_sync": true,
					"default": true
				},
				"arx:active_engines": {
					"type": "bool",
					"client_sync": true,
					"default": true
				},
				"arx:ranged": {
					"type": "bool",
					"client_sync": true,
					"default": false
				}
			}
		},



		"components": {
			"minecraft:knockback_resistance": {
				"value": 0.8
			},
			"minecraft:fire_immune": {},
			"minecraft:despawn": {
				"despawn_from_distance": {}
			},
			"minecraft:experience_reward": {
				"on_death": "query.last_hit_by_player ? 1200 : 0"
			},
			"minecraft:loot": {
				"table": "loot_tables/entities/march.json"
			},
			"minecraft:type_family": {
				"family": [
					"boss",
					"dangerous"
				]
			},
			"minecraft:navigation.walk": {
				"can_path_over_water": false,
				"avoid_water": true,
				"avoid_damage_blocks": true,
				"avoid_portals": true
			},
			"minecraft:movement.basic": {},
			"minecraft:jump.static": {},
			"minecraft:can_climb": {},
			"minecraft:collision_box": {
				"width": 0.7,
				"height": 3.0
			},
			"minecraft:nameable": {},
			"minecraft:health": {
				"value": 3000
			},
			"minecraft:balloonable": {},
			"minecraft:physics": {},
			"minecraft:pushable": {
				"is_pushable": false,
				"is_pushable_by_piston": false
			},
			"minecraft:conditional_bandwidth_optimization": {},
			"minecraft:on_death": {
				"event": "on_death",
				"target": "self"
			},
			"minecraft:behavior.look_at_entity": {
				"priority": 7,
				"look_distance": 16,
				"look_time": [
					1,
					5
				],
				"probability": 1,
				"filters": {
					"test": "is_family",
					"subject": "other",
					"value": "player"
				}
			},
			"minecraft:timer": {
				"looping": true,
				"time": 0.25,
				"time_down_event": {
					"event": "driver"
				}
			},

			// Предустановка для атаки на игроков (определение цели)
			"minecraft:behavior.nearest_attackable_target": {
				"priority": 3,
				"reselect_targets": true,
				"entity_types": [
					{
						"filters": {
							"test": "is_family",
							"subject": "other",
							"value": "player"
						},
						"max_dist": 28
					}
				],
				"must_see": true
			},

			// Предустановка для стрельбы, активируется подключаемым компонентом
			"minecraft:shooter": {
				"def": "arx:march_railgun_bullet"
			},

			// Предустановка для атаки с руки. Активируется подключаемым компонентом
			"minecraft:attack": {
				"damage": 0
			}
		},

		

		"component_groups": {
			// 0 - 2 фазный титл
			"default_boss_title": {
				"minecraft:boss": {
					"hud_range": 19,
					"name": "§c§lМарт",
					"should_darken_sky": false
				}
			},
			// Атака рельсотроном
			"ranged_attack": {
				"minecraft:behavior.ranged_attack": {
					"priority": 1,
					"attack_radius": 64,
					"attack_interval": 2
				}
			},
			// Атака руками
			"melee_attack": {
				"minecraft:behavior.melee_attack": {
					"priority": 2,
					"speed_multiplier": 1.2,
					"track_target": false,
					"reach_multiplier":  0.0
				}
			},
			// Самодеспавн
			"suicide": {
				"minecraft:instant_despawn": {}
			},

			// АКТИВАЦИЯ 0 ФАЗЫ
			"switch_to_0_phase": {
				"minecraft:target_nearby_sensor": {
					"inside_range": 3.2,
					"outside_range": 3.2,
					"must_see": true,
					"on_inside_range": {
						"event": "allow_melee_attack",
						"target": "self"
					},
					"on_outside_range": {
						"event": "deny_melee_attack",
						"target": "self"
					}
				},
				"minecraft:movement": {
					"value": 0.20
				},
				"minecraft:pushable": {
					"is_pushable": true,
					"is_pushable_by_piston": true
				}
			},

			// АКТИВАЦИЯ 1 ФАЗЫ
			"switch_to_1_phase": {
				"minecraft:movement": {
					"value": 0.27
				}
			},

			// АКТИВАЦИЯ 2 ФАЗЫ
			"switch_to_2_phase": {
				"minecraft:movement": {
					"value": 0.32
				}
			},

			// АКТИВАЦИЯ 3 ФАЗЫ
			"switch_to_3_phase": {
				"minecraft:boss": {
					"hud_range": 19,
					"name": "§c§lМарт - ярость",
					"should_darken_sky": false
				},
				"minecraft:target_nearby_sensor": {
					"inside_range": 5,
					"outside_range": 5,
					"must_see": true,
					"on_inside_range": {
						"event": "someone_nearby",
						"target": "self"
					},
					"on_outside_range": {
						"event": "not_someone_nearby",
						"target": "self"
					}
				}
				
			}
		},



		"events": {

			// АКТИВАЦИЯ 0 ФАЗЫ
			"switch_to_0_phase": {
				"add": {
					"component_groups": [
						"switch_to_0_phase"
					]
				}
			},
			// АКТИВАЦИЯ 1 ФАЗЫ
			"switch_to_1_phase": {
				"add": {
					"component_groups": [
						"switch_to_1_phase"
					]
				}
			},

			// АКТИВАЦИЯ 2 ФАЗЫ
			"switch_to_2_phase": {
				"add": {
					"component_groups": [
						"switch_to_2_phase"
					]
				}
			},

			// АКТИВАЦИЯ 3 ФАЗЫ
			"switch_to_3_phase": {
				"add": {
					"component_groups": [
						"switch_to_3_phase",
						"ranged_attack"
					]
				},
				"remove": {
					"component_groups": [
						"melee_attack"
					]
				}
			},


			// Установка титла босса
			"set_default_boss_title": {
				"add": {
					"component_groups": [
						"default_boss_title"
					]
				}
			},

			// Определение игроков рядом (компонент minecraft:target_nearby_sensor)
			"allow_melee_attack": {
				"run_command": {
					"command": [
						"tag @s add allow_melee_attack"
					]
				}
			},
			"deny_melee_attack": {
				"run_command": {
					"command": [
						"tag @s remove allow_melee_attack"
					]
				}
			},


			// Определение игроков рядом (компонент minecraft:target_nearby_sensor)
			"someone_nearby": {
				"run_command": {
					"command": [
						"tag @s add someone_nearby"
					]
				}
			},
			"not_someone_nearby": {
				"run_command": {
					"command": [
						"tag @s remove someone_nearby"
					]
				}
			},


			// При спавне
			"minecraft:entity_spawned": {
				"run_command": {
					"command": [
						"effect @s slow_falling 8 255 true",
						"scoreboard players set @a[scores={verify=2}] march_battle_time 0"
					]
				}
			},
			// При смерти
			"on_death": {
				"run_command": {
					"command": [
						"scoreboard players add @a[r=10] xp_tray 1200",
						"scoreboard players add @a[r=10] count_bss_kills 1",
						"function march/finalize_battle_march_lost"
					]
				}
			},
			

			// Вкл - выкл ранж атаку
			"enable_ranged_attack": {
				"add": {
					"component_groups": [
						"ranged_attack"
					]
				},
				"set_property": {
					"arx:ranged": true
				}
			},
			"disable_ranged_attack": {
				"remove": {
					"component_groups": [
						"ranged_attack"
					]
				},
				"set_property": {
					"arx:ranged": false
				}
			},

			// Вкл - выкл ранж атаку
			"enable_melee_attack": {
				"add": {
					"component_groups": [
						"melee_attack"
					]
				}
			},
			"disable_melee_attack": {
				"remove": {
					"component_groups": [
						"melee_attack"
					]
				}
			},
		

			// DRIVER
			"driver": {
				"run_command": {
					"command": [
						// Запускаем драйвер Марта
						"function march/driver"
					]
				}
			},
			// ОПРЕДЕЛЯЕМ ХП
			"test_hp": {
				"run_command": {
					"command": [
						"event entity @s test_hp_0_to_25",
						"event entity @s test_hp_25_tp_50",
						"event entity @s test_hp_50_to_75",
						"event entity @s test_hp_75_to_100"
					]
				}
			},
			"test_hp_0_to_25": {
				"sequence": [
					{
						"filters": {
							"test": "actor_health",
							"operator": "<=",
							"value": 750
						},
						"set_property": {
							"arx:phase": 3
						}
					}
				]
			},
			"test_hp_25_tp_50": {
				"sequence": [
					{
						"filters": {
							"all_of": [
								{
									"test": "actor_health",
									"operator": ">",
									"value": 750
								},
								{
									"test": "actor_health",
									"operator": "<=",
									"value": 1500
								}
							]
						},
						"set_property": {
							"arx:phase": 2
						}
					}
				]
			},
			"test_hp_50_to_75": {
				"sequence": [
					{
						"filters": {
							"all_of": [
								{
									"test": "actor_health",
									"operator": ">",
									"value": 1500
								},
								{
									"test": "actor_health",
									"operator": "<=",
									"value": 2250
								}
							]
						},
						"set_property": {
							"arx:phase": 1
						}
					}
				]
			},
			"test_hp_75_to_100": {
				"sequence": [
					{
						"filters": {
							"test": "actor_health",
							"operator": ">",
							"value": 2250
						},
						"set_property": {
							"arx:phase": 0
						}
					}
				]
			},
			"test_stop_descent": {
				"sequence": [
					{
						"filters": {
							"test": "on_ground",
							"operator": "==",
							"value": true
						},
						"set_property": {
							"arx:descent": false,
							"arx:active_engines": false
						},
						"add": {
							"component_groups": [
								"melee_attack"
							]
						}
					}
				]
			},
			"suicide": {
				"add": {
					"component_groups": [
						"suicide"
					]
				}
			}
		}
	}
}