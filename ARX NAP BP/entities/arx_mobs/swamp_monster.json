{
	"format_version": "1.16.0",
	"minecraft:entity": {
		"description": {
			"identifier": "arx:swamp_monster",
			"is_spawnable": true,
			"is_summonable": true
		},
		"components": {
			"minecraft:knockback_resistance": {
				"value": 0.8
			},
			"minecraft:despawn": {
				"despawn_from_distance": {}
			},
			"minecraft:experience_reward": {
				"on_death": "query.last_hit_by_player ? 150 : 0"
			},
			"minecraft:loot": {
				"table": "loot_tables/entities/swamp_monster.json"
			},
			"minecraft:is_hidden_when_invisible": {},
			"minecraft:type_family": {
				"family": [
					"mob",
					"dangerous",
					"boat_destroyer"
				]
			},
			"minecraft:navigation.walk": {
				"can_path_over_water": true,
				"avoid_water": false,
				"avoid_damage_blocks": true,
				"avoid_portals": true
			},
			"minecraft:movement.basic": {},
			"minecraft:jump.static": {},
			"minecraft:can_climb": {},
			"minecraft:collision_box": {
				"width": 1.3,
				"height": 2.5
			},
			"minecraft:nameable": {},
			"minecraft:health": {
				"value": 150
			},
			"minecraft:hurt_on_condition": {
				"damage_conditions": [
					{
						"filters": {
							"test": "in_lava",
							"subject": "self",
							"operator": "==",
							"value": true
						},
						"cause": "lava",
						"damage_per_tick": 4
					}
				]
			},
			"minecraft:movement": {
				"value": 0.4
			},
			"minecraft:behavior.random_stroll": {
				"priority": 6,
				"speed_multiplier": 0.5
			},
			"minecraft:balloonable": {},
			"minecraft:physics": {},
			"minecraft:pushable": {
				"is_pushable": true,
				"is_pushable_by_piston": true
			},
			"minecraft:conditional_bandwidth_optimization": {},
			"minecraft:behavior.look_at_entity": {
				"priority": 7,
				"look_distance": 16,
				"look_time": [
					1,
					5
				],
				"probability": 0.5
			},
			"minecraft:behavior.melee_attack": {
				"priority": 1
			},
			"minecraft:attack": {
				"damage": 14
			},
			"minecraft:behavior.nearest_attackable_target": {
				"priority": 2,
				"must_see": true,
				"reselect_targets": true,
				"within_radius": 15.0,
				"must_see_forget_duration": 25.0,
				"entity_types": [
					{
						"filters": {
							"all_of": [
								{
									"test": "is_family",
									"subject": "other",
									"value": "player"
								},
								{
									"test": "is_family",
									"subject": "other",
									"operator": "not",
									"value": "is_knocked"
								}
							]
						}
					}
				]
			},
			"minecraft:on_death": {
				"event": "on_death",
				"target": "self"
			}
		},
		"events": {
			"on_death": {
				"run_command": {
					"command": [
						"scoreboard players set @a[r=10, scores={ach_kill_swamp_monster=0}] ach_kill_swamp_monster 1",
						"scoreboard players add @a[r=10] xp_tray 150",
						"scoreboard players add @a[r=10] count_mob_kills 1"
					]
				}
			}
		}
