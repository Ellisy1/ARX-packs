{
	"format_version": "1.16.0",
	"minecraft:entity": {
		"description": {
			"identifier": "arx:grave",
			"is_spawnable": true,
			"is_summonable": true
		},
		"components": {
			"minecraft:type_family": {
				"family": [
					"grave"
				]
			},
			"minecraft:collision_box": {
				"width": 0.5,
				"height": 0.4
			},
			"minecraft:health": {
				"value": 1
			},
			"minecraft:physics": {},
			"minecraft:floats_in_liquid": {},
			"minecraft:buoyant": {
				"apply_gravity": true,
				"base_buoyancy": 1.0,
				"simulate_waves": true,
				"big_wave_probability": 0.03,
				"big_wave_speed": 10.0,
				"drag_down_on_buoyancy_removed": 0.0,
				"liquid_blocks": [
					"minecraft:water",
					"minecraft:flowing_water",
					"minecraft:lava",
					"minecraft:flowing_lava"
				]
			},
			"minecraft:conditional_bandwidth_optimization": {},
			"minecraft:inventory": {
				"can_be_siphoned_from": false,
				"container_type": "inventory",
				"inventory_size": 100,
				"private": false,
				"restrict_to_owner": false
			},
			"minecraft:item_hopper": {},
			"minecraft:timer": {
				"looping": false,
				"time": 1,
				"time_down_event": {
					"event": "arx:switch_control_to_core"
				}
			},
			"minecraft:pushable": {
				"is_pushable": true,
				"is_pushable_by_piston": true
			},
			"minecraft:fire_immune": {},
			"minecraft:damage_sensor": {
				"triggers": {
					"cause": "freezing",
					"deals_damage": false
				}
			}
		},
		"component_groups": {
			"arx:item_hopper": {
				"minecraft:item_hopper": {}
			},
			"arx:suicide": {
				"minecraft:instant_despawn": {}
			}
		},
		"events": {
			"arx:remove_item_hopper": {
				"remove": {
					"component_groups": [
						"arx:item_hopper"
					]
				}
			},
			"arx:suicide": {
				"add": {
					"component_groups": [
						"arx:suicide"
					]
				}
			},
			"arx:switch_control_to_core": {
				"run_command": {
					"command": [
						"tag @s add grave_cd_expired"
					]
				}
			},
			"minecraft:entity_spawned": {
				"run_command": {
					"command": [
						"tp @e[type=item, r=3] ~ ~0.3 ~",
						"effect @s slow_falling 999999 0 true",
						"tag @e[type=arx:grave, r=3, rm=0.01] add stop_hopping"
					]
				}
			},
			"arx:test_is_empty": {
				"sequence": [
					{
						"filters": {
							"test": "all_slots_empty",
							"operator": "equals",
							"value": "inventory"
						},
						"run_command": {
							"command": [
								"event entity @s arx:suicide",
								"playsound random.break @a ~ ~ ~"
							]
						}
					}
				]
			}
		}
	}
}