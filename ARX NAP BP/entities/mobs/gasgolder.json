{
	"format_version": "1.16.0",
	"minecraft:entity": {
		"description": {
			"identifier": "arx:gasgolder",
			"is_spawnable": true,
			"is_summonable": true
		},
		"components": {
			"minecraft:despawn": {
				"despawn_from_distance": {}
			},
			"minecraft:behavior.float": {
				"priority": 2
			},
			//			"minecraft:loot": {
			//				"table": "loot_tables/entities/gasgolder.json"
			//			},
			"minecraft:is_hidden_when_invisible": {},
			"minecraft:type_family": {
				"family": [
					"mob",
					"dangerous",
					"despawn_as_ghost",
					"boat_destroyer"
				]
			},
			"minecraft:navigation.walk": {
				"can_path_over_water": false,
				"avoid_water": true,
				"avoid_damage_blocks": true,
				"avoid_portals": true
			},
			"minecraft:movement.basic": {},
			"minecraft:jump.static": {},
			"minecraft:can_climb": {},
			"minecraft:collision_box": {
				"width": 0.6,
				"height": 1.6
			},
			"minecraft:health": {
				"value": 50000
			},
			"minecraft:balloonable": {},
			"minecraft:physics": {},
			"minecraft:pushable": {
				"is_pushable": true,
				"is_pushable_by_piston": true
			},
			"minecraft:conditional_bandwidth_optimization": {},
			"minecraft:behavior.look_at_entity": {
				"priority": 7,
				"look_distance": 5,
				"look_time": [
					0.3,
					2
				],
				"probability": 0.01
			},
			"minecraft:trade_table": {
				"convert_trades_economy": false,
				"display_name": "Газгольдер",
				"new_screen": false,
				"persist_trades": false,
				"table": "trading/gasgolder.json"
			},
			"minecraft:on_hurt_by_player": {
				"event": "arx:on_hurt_event",
				"target": "self"
			}
		},
		"component_groups": {
			"arx:despawn_as_ghost": {
				"minecraft:instant_despawn": {}
			}
		},
		"events": {
			"arx:despawn_as_ghost": {
				"add": {
					"component_groups": [
						"arx:despawn_as_ghost"
					]
				}
			},
			"arx:on_hurt_event": {
				"queue_command": {
					"command": [
						"execute as @s[tag=!control] at @s run summon arx:gasgolder_istribitor ~ ~ ~ facing @p",
						"execute as @s[tag=!control] at @s run effect @a[r=7] blindness 2 0 true",
						"execute as @s[tag=!control] at @s run playsound mob.rat_eliminator.spawn @a ~ ~ ~",
						"tag @s add control"
					]
				},
				"add": {
					"component_groups": [
						"arx:despawn_as_ghost"
					]
				}
			},
			"minecraft:entity_spawned": {
				"queue_command": {
					"command": [
						"execute if entity @a[scores={verify=2}, tag=scarlet_night] run tag @s add force_to_despawn"
					]
				}
			},
			"arx:despawn_forced": {
				"add": {
					"component_groups": [
						"arx:despawn_as_ghost"
					]
				}
			}
		}
	}
}