{
  "format_version": "1.16.100",
  "minecraft:item": {
    "description": {
      "identifier": "arx:undemon_book",
      "category": "items"
    },
    "components": {
      "minecraft:hand_equipped": false,
      "minecraft:max_stack_size": 1,
      "minecraft:foil": false,
      "minecraft:icon": {
        "texture": "arx:undemon_book"
      },
      "minecraft:cooldown": {
        "category": "undemon_book",
        "duration": 5
      },
      "minecraft:on_use": {
        "on_use": {
          "event": "on_use_event"
        }
      }
    },
    "events": {
      "on_use_event": {
        "swing": {},
        "run_command": {
          "command": [
            "tag @p add self",

            "execute @p[scores={c_demon=0}, tag=self] ~ ~ ~ w @s кажется, эта книга так не работает",

            "title @p[scores={c_demon=1}, tag=self] subtitle §e§lогромное облегчение",
            "title @p[scores={c_demon=1}, tag=self] title §e§lвы чувствуете",
            "execute @p[scores={c_demon=1}, tag=self] ~ ~ ~ playsound undemon @a ~ ~ ~ 30",
            "clear @p[scores={c_demon=1}, tag=self] arx:undemon_book 0 1",
            "scoreboard players set @p[scores={c_demon=1}, tag=self] c_demon 0",
            
            "tag @p remove self"
          ]
        }
      },
      "hurt": {
        "damage": {
          "type": "magic",
          "amount": 1,
          "target": "self"
        }
      }
    }
  }
}