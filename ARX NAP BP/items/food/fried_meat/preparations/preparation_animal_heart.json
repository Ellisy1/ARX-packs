{
  "format_version": "1.16.100",
  "minecraft:item": {
    "description": {
      "identifier": "arx:preparation_animal_heart",
      "category": "equipment"
    },
    "components": {
      "minecraft:creative_category": {
        "parent": "itemGroup.name.cookedFood"
      },
      "minecraft:icon": {
        "texture": "arx:animal_heart_fried"
      },
      "minecraft:cooldown": {
        "category": "food",
        "duration": 3
      },
      "minecraft:max_stack_size": 1,
      "minecraft:on_use": {
        "on_use": {
          "event": "on_use_event"
        }
      }
    },
    "events": {
      "on_use_event": {
        "run_command": {
          "command": [
            "tag @p add self",
            
            "clear @p arx:preparation_animal_heart 0 1",

            "give @p[tag=self, scores={sk_a_20=0}] arx:fried_animal_heart",
            "give @p[tag=self, scores={sk_a_20=1, sk_b_10=0}] arx:fried_animal_heart",
            "give @p[tag=self, scores={sk_b_10=1, sk_c_7=0}] arx:fried_animal_heart",
            "give @p[tag=self, scores={sk_c_7=1}] arx:perfect_fried_animal_heart",

            "w @p[tag=self, scores={sk_a_20=0}] §aГотово!",
            "w @p[tag=self, scores={sk_a_20=1, sk_b_10=0}] §aГотово!",
            "w @p[tag=self, scores={sk_b_10=1, sk_c_7=0}] §aГотово!",
            "w @p[tag=self, scores={sk_c_7=1}] §6Превосходно!",

            "scoreboard players add @p xp_tray 5",
            
            "tag @p remove self"
          ]
        }
      }
    }
  }
}