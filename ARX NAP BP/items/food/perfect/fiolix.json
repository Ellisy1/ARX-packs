{
  "format_version": "1.16.100",
  "minecraft:item": {
    "description": {
      "identifier": "arx:perfect_fiolix",
      "category": "equipment"
    },
    "components": {
      "minecraft:creative_category": {
        "parent": "itemGroup.name.cookedFood"
      },
      "minecraft:icon": {
        "texture": "arx:fiolix"
      },
      "minecraft:cooldown": {
        "category": "food",
        "duration": 1
      },
      "minecraft:on_use": {
        "on_use": {
          "event": "on_eat"
        }
      },
      "minecraft:fuel": {
        "duration": 3.0
      },
      "minecraft:max_stack_size": 1
    },
    "events": {
      "on_eat": {
        "run_command": {
          "command": [
            "tag @p add tt_f_perfect",
            "tag @p add is_solid_food",
            "tag @p add tt_f_herbal",
            "scoreboard players set @p t_f_deliciousness 55",

            "scoreboard players set @p t_f_salty 15",
            "scoreboard players set @p t_f_exotic 25",

            "scoreboard players set @p t_f_poisoning 250",

            "function food/food",

            "clear @s[scores={saturation=0}] arx:perfect_fiolix 0 1",
            "give @s[scores={saturation=0}] bowl",
            "scoreboard players add @p[tag=self, scores={drugs_delay=8000.., saturation=0}] stress 1500",
            "w @p[tag=self, scores={drugs_delay=8000.., saturation=0}] Слишком много наркотиков. Отвратительные ощущения",
            "scoreboard players add @p[tag=self, scores={drugs_delay=1.., saturation=0}] stress -1000",
            "scoreboard players add @p[tag=self, scores={drugs_delay=1..600, saturation=0}] stress -1000",
            "scoreboard players add @p[tag=self, scores={drugs_delay=0, saturation=0}] stress -5000",
            "scoreboard players add @p[tag=self, scores={drugs_delay=0, saturation=0}] xp_tray 600",
            "scoreboard players add @s[scores={saturation=0}] drugs_delay 3000",
            "function food/cooldown/set_default_cooldown"
          ]
        }
      }
    }
  }
}