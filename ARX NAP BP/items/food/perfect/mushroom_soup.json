{
  "format_version": "1.16.100",
  "minecraft:item": {
    "description": {
      "identifier": "arx:perfect_mushroom_soup",
      "category": "equipment"
    },
    "components": {
      "minecraft:creative_category": {
        "parent": "itemGroup.name.cookedFood"
      },
      "minecraft:icon": {
        "texture": "arx:mushroom_soup"
      },
      "minecraft:cooldown": {
        "category": "food",
        "duration": 1
      },
      "minecraft:on_use": {
        "on_use": {
          "event": "on_eat"
        }
      },
      "minecraft:fuel": {
        "duration": 3.0
      },
      "minecraft:max_stack_size": 1
    },
    "events": {
      "on_eat": {
        "run_command": {
          "command": [
            "tag @p add tt_f_perfect",
            "tag @p add tt_f_herbal",
            "tag @p add is_soup",
            "scoreboard players set @p t_f_deliciousness 50",

            "scoreboard players set @p t_f_salty 15",
            "scoreboard players set @p t_f_exotic 10",

            "scoreboard players set @p t_f_poisoning 200",
            "function food/food",

            "clear @s[scores={saturation=0}] arx:perfect_mushroom_soup 0 1",
            "give @s[scores={saturation=0}] bowl",
            "function food/cooldown/set_default_cooldown"
          ]
        }
      }
    }
  }
}