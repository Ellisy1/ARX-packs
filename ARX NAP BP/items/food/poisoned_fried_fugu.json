{
  "format_version": "1.16.100",
  "minecraft:item": {
    "description": {
      "identifier": "arx:poisoned_fried_fugu",
      "category": "equipment"
    },
    "components": {
      "minecraft:creative_category": {
        "parent": "itemGroup.name.cookedFood"
      },
      "minecraft:icon": {
        "texture": "arx:fried_fugu"
      },
      "minecraft:cooldown": {
        "category": "food",
        "duration": 1
      },
      "minecraft:on_use": {
        "on_use": {
          "event": "on_eat"
        }
      },
      "minecraft:fuel": {
        "duration": 3.0
      },
      "minecraft:max_stack_size": 1
    },
    "events": {
      "on_eat": {
        "run_command": {
          "command": [
            "tag @p add tt_f_fish",
            "tag @p add is_solid_food",

            "scoreboard players set @p t_f_deliciousness 1",

            "scoreboard players set @p t_f_poisoning 1000",
            "function food/food",

            "clear @s[scores={saturation=0}] arx:poisoned_fried_fugu 0 1",
            "effect @s[scores={saturation=0}] fatal_poison 999999 255",
            "function food/cooldown/set_default_cooldown"
          ]
        }
      }
    }
  }
}