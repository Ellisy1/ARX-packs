{
  "format_version": "1.16.100",
  "minecraft:item": {
    "description": {
      "identifier": "arx:tea_cup_of_evergreen_dream",
      "category": "equipment"
    },
    "components": {
      "minecraft:creative_category": {
        "parent": "itemGroup.name.cookedFood"
      },
      "minecraft:icon": {
        "texture": "arx:tea_cup_of_evergreen_dream"
      },
      "minecraft:cooldown": {
        "category": "food",
        "duration": 1
      },
      "minecraft:on_use": {
        "on_use": {
          "event": "on_eat"
        }
      },
      "minecraft:max_stack_size": 1
    },
    "events": {
      "on_eat": {
        "run_command": {
          "command": [
            "tag @p add tt_f_herbal",
            "tag @p add is_liquid_food",
            "scoreboard players set @p t_f_deliciousness 95",

            "scoreboard players set @p t_f_sour 80",

            "scoreboard players set @p t_f_poisoning 20",
            "function food/food",

            "clear @s[scores={saturation=0}] arx:tea_cup_of_evergreen_dream 0 1",
            "give @s[scores={saturation=0}] arx:cup",
            "function food/cooldown/set_default_cooldown"
          ]
        }
      }
    }
  }
}