{
  "format_version": "1.16.100",
  "minecraft:item": {
    "description": {
      "identifier": "arx:action_break_arm",
      "category": "items"
    },
    "components": {
      "minecraft:icon": {
        "texture": "arx:fist_symbol"
      },
      "minecraft:cooldown": {
        "category": "actions",
        "duration": 1
      },
      "minecraft:on_use": {
        "on_use": {
          "event": "on_use_event"
        }
      },
      "tag:is_invisible": {}
    },
    "events": {
      "on_use_event": {
        "run_command": {
          "command": [
            "tag @s add self",
            "execute @p[tag=!self, r=3, hasitem={item=arx:shackles, location=slot.armor.legs}] ~ ~ ~ tag @p[tag=self] add nearest_player_has_shackles",

            "w @s[tag=nearest_player_has_shackles] §aНезабываемый хруст!",
            "playanimation @s[tag=nearest_player_has_shackles] animation.player.break_limb",
            "scoreboard players set @p[tag=!self, r=3, hasitem={item=arx:shackles, location=slot.armor.legs}] ill_broken_arm 72000",
            "damage @p[tag=!self, r=3, hasitem={item=arx:shackles, location=slot.armor.legs}] 2 suicide",

            "execute @s[tag=!nearest_player_has_shackles] ~ ~ ~ w @s §6Чтобы сломать руку игроку в кандалах, сначала надо подойти к нему.",

            "tag @s remove nearest_player_has_shackles",
            "tag @s remove self"
          ]
        }
      }
    }
  }
}