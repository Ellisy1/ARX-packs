{
	"format_version": "1.19.0",
	"animation_controllers": {
		"controller.animation.fiercewolf.basic": {
			"initial_state": "idle",
			"states": {
				"idle": {
					"animations": [
						"stay",
						{"attack": "v.attack_time > 0"}
					],
					"transitions": [
						{"walking": "q.ground_speed > 1.0"}
					],
					"blend_transition": 0.2
				},
				"walking": {
					"animations": [
						"move",
						{"attack": "v.attack_time > 0"}
					],
					"transitions": [
						{"idle": "q.ground_speed < 0.5"}
					],
					"blend_transition": 0.2
				}
			}
		}
	}
}