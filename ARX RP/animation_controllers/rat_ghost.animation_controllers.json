{
	"format_version": "1.19.0",
	"animation_controllers": {
		"controller.animation.rat_ghost.basic": {
			"initial_state": "idle",
			"states": {
				"idle": {
                    "animations": ["stay"],
					"transitions": [
						{"walking": "q.ground_speed > 0.7"}
					],
					"blend_transition": 0.4
				},
				"walking": {
					"animations": ["walk", "stay"],
					"transitions": [
						{"idle": "q.ground_speed < 0.4"}
					],
					"blend_transition": 0.4
				}
			}
		}
	}
}