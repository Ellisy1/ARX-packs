{
	"format_version": "1.19.0",
	"animation_controllers": {
		"controller.animation.steady_boat.basic": {
			"states": {
				"default": {
					"animations": ["waves"],
					"transitions": [
						{"active": "q.has_rider && q.is_moving"},
						{"fixed": "!query.is_in_water"}
					],
					"blend_transition": 1
				},
				"active": {
					"animations": ["waves", "row"],
					"transitions": [
						{"default": "!(q.has_rider && q.is_moving)"},
						{"fixed": "!query.is_in_water"}
					],
					"blend_transition": 1
				},
				"fixed": {
					"transitions": [
						{"default": "query.is_in_water"}
					]
				}
			}
		}
	}
}