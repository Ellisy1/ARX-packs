{
	"format_version": "1.16.0",
	"minecraft:entity": {
		"description": {
			"identifier": "arx:sand_elemental",
			"is_spawnable": true,
			"is_summonable": true
		},
		"components": {
			"minecraft:despawn": {
				"despawn_from_distance": {}
			},
			"minecraft:experience_reward": {
				"on_death": "query.last_hit_by_player ? 300 : 0"
			},
			"minecraft:loot": {
				"table": "loot_tables/entities/sand_elemental.json"
			},
			"minecraft:is_hidden_when_invisible": {},
			"minecraft:type_family": {
				"family": [
					"mob",
					"dangerous",
					"boat_destroyer"
				]
			},
			"minecraft:breathable": {
				"total_supply": 15,
				"suffocate_time": 0
			},
			"minecraft:navigation.walk": {
				"can_path_over_water": true,
				"avoid_water": true,
				"avoid_damage_blocks": true,
				"avoid_portals": true
			},
			"minecraft:movement.basic": {},
			"minecraft:jump.static": {},
			"minecraft:can_climb": {},
			"minecraft:collision_box": {
				"width": 1.0,
				"height": 1.0
			},
			"minecraft:nameable": {},
			"minecraft:health": {
				"value": 180
			},
			"minecraft:movement": {
				"value": 0.4
			},
			"minecraft:behavior.random_stroll": {
				"priority": 6,
				"speed_multiplier": 0.5
			},
			"minecraft:balloonable": {},
			"minecraft:physics": {},
			"minecraft:pushable": {
				"is_pushable": true,
				"is_pushable_by_piston": true
			},
			"minecraft:conditional_bandwidth_optimization": {},
			"minecraft:behavior.look_at_entity": {
				"priority": 7,
				"look_distance": 16,
				"look_time": [
					1,
					5
				],
				"probability": 0.5
			},
			"minecraft:behavior.melee_attack": {
				"priority": 1
			},
			"minecraft:attack": {
				"damage": 16,
				"effect_duration": 2.0
			},
			"minecraft:behavior.nearest_attackable_target": {
				"priority": 2,
				"must_see": true,
				"reselect_targets": true,
				"within_radius": 15.0,
				"must_see_forget_duration": 25.0,
				"entity_types": [
					{
						"filters": {
							"any_of": [
								{
									"test": "is_family",
									"subject": "other",
									"value": "helpless"
								},
								{
									"test": "is_family",
									"subject": "other",
									"value": "player"
								}
							]
						}
					}
				]
			},
			"minecraft:on_death": {
				"event": "on_death",
				"target": "self"
			}
		},
		"events": {
			"on_death": {
				"run_command": {
					"command": [
						"scoreboard players set @a[r=10, scores={ach_kill_sand_elemental=0}] ach_kill_sand_elemental 1",
						"scoreboard players add @a[r=10] xp_tray 300",
						"scoreboard players add @a[r=10] count_mob_kills 1"
					]
				}
			}
		}
	}
}