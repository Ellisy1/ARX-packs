{
	"format_version": "1.16.0",
	"minecraft:entity": {
		"description": {
			"identifier": "arx:demon",
			"is_spawnable": true,
			"is_summonable": true
		},
		"components": {
			"minecraft:despawn": {
				"despawn_from_distance": {}
			},
			"minecraft:experience_reward": {
				"on_death": "query.last_hit_by_player ? 90 : 0"
			},
			"minecraft:loot": {
				"table": "loot_tables/entities/demon.json"
			},
			"minecraft:knockback_resistance": {
				"value": 0.4
			},
			"minecraft:type_family": {
				"family": [
					"mob",
					"dangerous"
				]
			},
			"minecraft:health": {
				"value": 50
			},
			"minecraft:collision_box": {
				"width": 1,
				"height": 2
			},
			"minecraft:balloonable": {},
			"minecraft:physics": {},
			"minecraft:pushable": {
				"is_pushable": true,
				"is_pushable_by_piston": true
			},
			"minecraft:conditional_bandwidth_optimization": {},
			"minecraft:on_death": {
				"event": "on_death",
				"target": "self"
			},
			"minecraft:behavior.random_hover": {
				"priority": 12,
				"xz_dist": 8,
				"y_dist": 8,
				"y_offset": -1,
				"interval": 1,
				"hover_height": [
					1,
					4
				]
			},
			"minecraft:behavior.float": {
				"priority": 19
			},
			"minecraft:flying_speed": {
				"value": 0.20
			},
			"minecraft:navigation.hover": {
				"can_path_over_water": false,
				"can_sink": false,
				"can_pass_doors": false,
				"can_path_from_air": true,
				"avoid_water": true,
				"avoid_damage_blocks": true,
				"avoid_sun": false
			},
			"minecraft:movement.hover": {},
			"minecraft:jump.static": {},
			"minecraft:can_fly": {},
			"minecraft:behavior.nearest_attackable_target": {
				"priority": 2,
				"must_see": true,
				"reselect_targets": true,
				"within_radius": 25.0,
				"must_see_forget_duration": 25.0,
				"entity_types": [
					{
						"filters": {
								"all_of": [
									{
										"test": "is_family",
										"subject": "other",
										"value": "player"
									},
									{
										"test": "is_family",
										"subject": "other",
										"operator": "not",
										"value": "is_knocked"
									}
								]
							},
						"max_dist": 30
					}
				]
			},
			"minecraft:fire_immune": {},
			"minecraft:timer": {
				"looping": true,
				"time": 1.8,
				"time_down_event": {
					"event": "arx:driver" // Запуск драйвера
				}
			},
			"minecraft:target_nearby_sensor": {
				"inside_range": 5.5,
				"outside_range": 6.0,
				"must_see": true,
				"on_inside_range": {
					"event": "stop_follow",
					"target": "self"
				},
				"on_outside_range": {
					"event": "start_follow",
					"target": "self"
				}
			},
			"minecraft:behavior.avoid_mob_type": {
				"priority": 1,
				"entity_types": [
					{
						"filters": {
							"test": "is_family",
							"subject": "other",
							"value": "player"
						},
						"max_dist": 6,
						"walk_speed_multiplier": 1.5
					}
				]
			}
		},
		"component_groups": {
			"arx:follow_to_hurt": {
				"minecraft:behavior.melee_attack": {
					"priority": 1,
					"speed_multiplier": 1.4,
					"track_target": false,
					"reach_multiplier":  0.0
				},
				"minecraft:attack": {
					"damage": 0
				}
			}
		},
		"events": {
			"on_death": {
				"queue_command": {
					"command": [
						"scoreboard players add @a[r=10] xp_tray 90",
						"scoreboard players add @a[r=10] count_mob_kills 1"
					]
				}
			},
			"arx:driver": {
				"queue_command": {
					"command": [
						"scoreboard players random @s custom_random 0 6",
						"execute as @s[scores={custom_random=2}] if entity @p[m=survival, has_property={arx:is_knocked=false}] run damage @p[r=15, m=survival] 7",
						"execute as @s[scores={custom_random=2}] if entity @p[m=survival, has_property={arx:is_knocked=false}] run playanimation @s animation.demon.attack",
						"execute as @s[scores={custom_random=2}] if entity @p[m=survival, has_property={arx:is_knocked=false}] run playsound dissecting_fog @a ~ ~ ~ ",
						"playsound demon_fly @a ~ ~ ~"
					]
				}
			},
			"stop_follow": {
				"remove": {
					"component_groups": [
						"arx:follow_to_hurt"
					]
				}
			},
			"start_follow": {
				"add": {
					"component_groups": [
						"arx:follow_to_hurt"
					]
				}
			}
		}
	}
}