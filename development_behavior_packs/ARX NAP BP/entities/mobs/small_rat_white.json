{
	"format_version": "1.16.0",
	"minecraft:entity": {
		"description": {
			"identifier": "arx:small_rat_white",
			"is_spawnable": true,
			"is_summonable": true
		},
		"components": {
			"minecraft:behavior.avoid_mob_type": {
				"priority": 3,
				"entity_types": [
					{
						"filters": {
							"test": "is_family",
							"subject": "other",
							"value": "is_knocked"
						},
						"max_dist": 16
					}
				]
			},
			"minecraft:despawn": {
				"despawn_from_distance": {}
			},
			"minecraft:experience_reward": {
				"on_death": "query.last_hit_by_player ? 12 : 0"
			},
			"minecraft:behavior.float": {
				"priority": 2
			},
			"minecraft:loot": {
				"table": "loot_tables/entities/small_rat_white.json"
			},
			"minecraft:is_hidden_when_invisible": {},
			"minecraft:type_family": {
				"family": [
					"mob",
					"dangerous",
					"small_rat",
					"rat",
					"can_be_despawned_by_ratatao_spell"
				]
			},
			"minecraft:breathable": {
				"total_supply": 15,
				"suffocate_time": 0
			},
			"minecraft:navigation.walk": {
				"can_path_over_water": true,
				"avoid_water": true,
				"avoid_damage_blocks": true,
				"avoid_portals": true
			},
			"minecraft:movement.basic": {},
			"minecraft:jump.static": {},
			"minecraft:can_climb": {},
			"minecraft:collision_box": {
				"width": 0.5,
				"height": 0.3
			},
			"minecraft:nameable": {},
			"minecraft:health": {
				"value": 6
			},
			"minecraft:hurt_on_condition": {
				"damage_conditions": [
					{
						"filters": {
							"test": "in_lava",
							"subject": "self",
							"operator": "==",
							"value": true
						},
						"cause": "lava",
						"damage_per_tick": 4
					}
				]
			},
			"minecraft:movement": {
				"value": 0.2
			},
			"minecraft:behavior.random_stroll": {
				"priority": 6,
				"speed_multiplier": 0.8
			},
			"minecraft:balloonable": {},
			"minecraft:physics": {},
			"minecraft:pushable": {
				"is_pushable": true,
				"is_pushable_by_piston": true
			},
			"minecraft:conditional_bandwidth_optimization": {},
			"minecraft:behavior.look_at_entity": {
				"priority": 7,
				"look_distance": 16,
				"look_time": [
					1,
					5
				],
				"probability": 0.5
			},
			"minecraft:on_hurt_by_player": {
				"event": "damage_trigger"
			},
			"minecraft:on_death": {
				"event": "on_death",
				"target": "self"
			}
		},
		"component_groups": {
			"arx:agressive": {
				"minecraft:timer": {
					"looping": true,
					"time": 100,
					"time_down_event": {
						"event": "become_calm"
					}
				},
				"minecraft:behavior.nearest_attackable_target": {
					"priority": 2,
					"must_see": true,
					"reselect_targets": true,
					"within_radius": 25.0,
					"must_see_forget_duration": 25.0,
					"entity_types": [
						{
							"filters": {
								"all_of": [
									{
										"test": "is_family",
										"subject": "other",
										"value": "player"
									},
									{
										"test": "is_family",
										"subject": "other",
										"operator": "not",
										"value": "is_knocked"
									}
								]
							},
							"max_dist": 35
						}
					]
				},
				"minecraft:behavior.melee_attack": {
					"priority": 1,
					"speed_multiplier": 2.1
				},
				"minecraft:attack": {
					"damage": 2
				}
			}
		},
		"events": {
			"damage_trigger": {
				"queue_command": {
					"command": [
						"event entity @e[family=small_rat, r=10] become_agressive"
					]
				}
			},
			"become_agressive": {
				"add": {
					"component_groups": "arx:agressive"
				}
			},
			"become_calm": {
				"remove": {
					"component_groups": "arx:agressive"
				}
			},
			"on_death": {
				"queue_command": {
					"command": [
						"scoreboard players add @a[r=10] xp_tray 12",
						"scoreboard players add @a[r=10] count_mob_kills 1"
					]
				}
			}
		}
	}
}