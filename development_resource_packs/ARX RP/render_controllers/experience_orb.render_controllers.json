{
  "format_version": "1.8.0",
  "render_controllers": {
    "controller.render.experience_orb": {
        "geometry": "Geometry.default",
        "materials": [ { "*": "Material.default" } ],
        "textures": [ "Texture.default" ],
        "overlay_color": {
            "r": "(Math.sin(query.life_time * 1100) + 2.3) * 0.15",
            "g": "(Math.sin(query.life_time * 228) + 1) * 0.1",
            "b": "(Math.sin(query.life_time * 1500) + 2.8) * 0.3 + (Math.sin(query.life_time * 300)) * 0.3",
            "a": "0.5"
        },
        "ignore_lighting": true,
        "uv_anim": {
            "offset": [ "variable.u", "variable.v" ],
            "scale": [ 1.0, 1.0 ]
        }
    }
  }
}
